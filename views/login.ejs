<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Boostrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        .bg {
            position: relative;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .bg-img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/pic/background.jpg'); /* Ganti 'background.jpg' dengan path ke gambar latar belakang Anda */
            background-size: cover;
            background-position: center;
            filter: blur(5px); /* Blur background */
            z-index: -1; /* Letakkan di belakang elemen lain */
        }
        .form-container {
            width: 350px;
            background-color: rgba(255, 255, 255, 0.5); /* Transparan */
            backdrop-filter: blur(5px); /* Blur */
            padding: 20px;
            border-radius: 10px; /* Membuat tepi melengkung */
        }

        .form-group {
          margin-bottom: 15px;
        }

        .form-group label {
          display: block;
          font-weight: bold;
          margin-bottom: 5px;
        }

        .form-group input {
          width: 100%;
          padding: 8px;
          font-size: 16px;
          border: 1px solid #ccc;
          border-radius: 3px;
        }

        .submit-btn {
          display: block;
          width: 100%;
          padding: 10px;
          background-color: #472dbb;
          color: #fff;
          border: none;
          border-radius: 5px;
          cursor: pointer;
        }

        .submit-btn:hover {
          background-color: #4565a0;
        }

        p {
          margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="bg">
        <div class="bg-img"></div>
        <div class="form-container">
            <h2>Login</h2>
            <form id="loginForm" action="/login" method="post" autocomplete="off">
                <div class="form-group">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" placeholder="Enter your Username" required autocomplete="off">
                    <small class="error-message" style="color: red;"></small>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" placeholder="Password" required autocomplete="off">
                    <small class="error-message" style="color: red;"></small>
                </div>
                <button type="submit" class="submit-btn">Login</button>
                <% if (errorMessage && errorMessage.length > 1) { %>
                    <div style="color: red; margin-top: 10px;">
                        <%= errorMessage %>
                    </div>
                <% } %>
            </form>
            <p>Don't have an account? <a class="link" href="/signup">SignUp</a></p>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                setTimeout(clearInputFields, 500); // Delay clear fields to bypass browser autofill
            });

            function clearInputFields() {
                document.querySelectorAll('#loginForm input').forEach(input => {
                    input.value = ''; // Explicitly clear each input
                });
            }

            document.getElementById('loginForm').addEventListener('submit', function(event) {
                let valid = true;
                const inputs = document.querySelectorAll('#loginForm input');

                inputs.forEach(input => {
                    if (!input.value) {
                        document.querySelector(`#${input.id} + .error-message`).textContent = 'This field is required.';
                        valid = false;
                    } else {
                        document.querySelector(`#${input.id} + .error-message`).textContent = '';
                    }
                });

                if (!valid) {
                    event.preventDefault(); // Stop the form from submitting
                }
            });
        </script>

    <!-- Bootstrap JS (Optional, only if you need JavaScript features from Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
