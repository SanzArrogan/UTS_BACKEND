<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ideas</title>
    <link rel="stylesheet" href="/styles/style.css">
    <style>
*, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f4;
    padding: 20px;
    color: #333;
}

h1 {
    text-align: center;
    margin: 40px 0;
}

/* Search Container */
.search-container {
    display: flex;
    justify-content: center;
    margin-bottom: 30px;
}

.search-input {
    padding: 10px 15px;
    width: 100%;
    max-width: 400px;
    border-radius: 20px;
    border: 1px solid #ccc;
    margin-right: 10px;
}

.search-button {
    padding: 10px 20px;
    background-color: #0056b3;
    color: white;
    border: none;
    border-radius: 20px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.search-button:hover {
    background-color: #004494;
}

/* Table Styles */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
}

th, td {
    text-align: left;
    padding: 12px;
    border-bottom: 1px solid #ccc;
}

th {
    background-color: #0056b3;
    color: white;
}

tr:hover {
    background-color: #f5f5f5;
}

/* Buttons in Table */
.action-container button {
    padding: 8px 16px;
    border-radius: 5px;
    border: none;
    margin-right: 5px;
    transition: all 0.3s ease;
    font-size: 10px;
    width: 100px;
}

.remove-button {
    background-color: #f44336;
    color: white;
}

.invest-button {
    background-color: #4CAF50;
    color: white;
}

.remove-button:hover, .invest-button:hover {
    opacity: 0.9;
}

/* Popup Styles */
.popup-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    max-width: 400px;
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    z-index: 1000;
    display: none;
}

.popup-container.active {
    display: block;
}

input[type="text"], input[type="password"], select {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
}


    </style>
</head>
<body>
    <h1>Ideas</h1>
    <div class="search-container">
        <input type="text" id="searchInput" class="search-input" placeholder="Search by name...">
        <button onclick="searchFunction()" class="search-button">Search</button>
    </div>
    <table>
        <thead>
            <tr>
                <th>Nomor</th>
                <th>Nama</th>
                <th>Nomor Telepon</th>
                <th>Ide</th>
                <th>Dana</th>
                <th>Nominal Bayar</th> <!-- Kolom baru untuk input nominal bayar -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tableBody">
            <% if (typeof pitchers !== 'undefined' && pitchers.length > 0) { %>
                <% pitchers.forEach((pitcher, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= pitcher.name %></td>
                        <td><%= pitcher.phone %></td>
                        <td><%= pitcher.idea %></td>
                        <td><%= pitcher.funding %></td>
                        <td>
                            <button onclick="showPopup('<%= pitcher._id %>')" class="invest-button">Invest</button>
                        </td>
                        <td class="action-container">
                            <button onclick="removeFunction('<%= pitcher._id %>')" class="remove-button">Remove</button> <!-- Tombol hapus -->
                            <div id="popup<%= pitcher._id %>" class="popup-container">
                                <input type="text" id="payAmount<%= pitcher._id %>" placeholder="Nominal Pembayaran">
                                <select id="bankSelect<%= pitcher._id %>">
                                    <option value="BCA">BCA</option>
                                    <option value="Mandiri">Mandiri</option>
                                    <option value="BNI">BNI</option>
                                </select>
                                <input type="text" id="reqNumber<%= pitcher._id %>" placeholder="Nomor Rekening">
                                <input type="password" id="pin<%= pitcher._id %>" placeholder="PIN">
                                <button id="payButton<%= pitcher._id %>" onclick="verifyPayment('<%= pitcher._id %>', '<%= pitcher.funding %>')">Pay</button>
                            </div>
                            <div id="progressBar<%= pitcher._id %>" class="progress-bar"></div> <!-- Menampilkan progres pembayaran -->
                        </td>
                    </tr>
                <% }); %>
            <% } %>
        </tbody>        
    </table>

    <script>
        function searchFunction() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("searchInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("tableBody");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[1];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }

        function removeFunction(id) {
            if (confirm("Are you sure you want to remove this data?")) {
                fetch(`/remove_pitcher/${id}`, {
                    method: 'DELETE',
                })
                .then(response => response.json())
                .then(data => {
                    alert(data.message);
                    location.reload();
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }
        }

        function showPopup(id) {
            var popup = document.getElementById("popup" + id);
            popup.classList.toggle("active");
        }

        function verifyPayment(id, funding) {
            var payAmount = parseFloat(document.getElementById("payAmount" + id).value);
            var pitcherFunding = parseFloat(funding);
            var progressBar = document.getElementById("progressBar" + id);
            var paymentStatus = document.getElementById("paymentStatus" + id);

            if (isNaN(payAmount)) {
                alert("Masukkan nominal bayar yang valid!");
                return;
            }

            if (payAmount < 0) {
                alert("Masukkan nominal bayar yang valid!");
                return;
            }

            if (payAmount > pitcherFunding) {
                alert("Nominal pembayaran melebihi dana yang dibutuhkan!");
                return;
            }

            var paymentProgress = (payAmount / pitcherFunding) * 100;
            if (!isNaN(paymentProgress)) {
                progressBar.style.width = paymentProgress + "%";
                if (paymentProgress >= 100) {
                    paymentStatus.textContent = "Lunas";
                    paymentStatus.classList.add("payment-status");
                } else {
                    paymentStatus.textContent = paymentProgress.toFixed(2) + "%";
                    paymentStatus.classList.remove("payment-status");
                }
            }

            var bankSelect = document.getElementById("bankSelect" + id).value;
            var reqNumber = document.getElementById("reqNumber" + id).value;
            var pin = document.getElementById("pin" + id).value;

            if (pin === "123456") {
                alert("Pembayaran berhasil.");
                var popup = document.getElementById("popup" + id);
                popup.classList.remove("active"); // Menghilangkan kelas active untuk menyembunyikan popup
            } else {
                alert("PIN salah!");
            }
        }
    </script>
</body>
</html>